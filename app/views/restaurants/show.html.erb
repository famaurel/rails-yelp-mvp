<h2><%= @restaurant.name %></h2>
<h3><%= "#{@restaurant.category} restaurant" %></h3>
<h4><%= @restaurant.address %></h4>
<% @restaurant.reviews.each do |review| %>
  <p><%= "#{review.content} - #{review.rating} stars" %></p>
<% end %>

<span><%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %></span>

<span><%= link_to 'Back to the list', restaurants_path %></span>
