<h1>New restaurant</h1>

<%= form_for(@restaurant) do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.submit %>
<% end %>

<span><%= link_to 'Back to the list', restaurants_path %></span>
